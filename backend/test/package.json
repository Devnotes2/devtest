{
  "name": "api-test-suite",
  "version": "1.0.0",
  "description": "Standalone API test suite - can run independently of backend",
  "main": "standalone-test-runner.js",
  "scripts": {
    "test": "node standalone-test-runner.js health-check dev",
    "test:dev": "node standalone-test-runner.js health-check dev",
    "test:prod": "node standalone-test-runner.js health-check prod",
    "test:health": "node standalone-test-runner.js health-check prod",
    "install-deps": "npm install newman newman-reporter-htmlextra"
  },
  "dependencies": {
    "newman": "^6.0.0",
    "newman-reporter-htmlextra": "^1.23.1"
  },
  "keywords": [
    "api-testing",
    "newman",
    "postman",
    "health-checks",
    "monitoring"
  ],
